<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LogicBlock.LoginActivity"
    android:clickable="false"
    android:background="@android:color/holo_red_light"
    android:onClick="log_in">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignRight="@+id/email_id"
        android:layout_alignEnd="@+id/email_id"
        android:layout_below="@+id/email_id"
        android:layout_alignLeft="@+id/email_id"
        android:layout_alignStart="@+id/email_id"
        android:hint="Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign UP"
        android:id="@+id/sign_in"
        android:clickable="true"
        android:onClick="sign_up"
        android:textColor="#060400"
        android:textSize="25dp"
        android:background="@android:color/tertiary_text_light"
        android:textStyle="normal"
        android:textColorLink="#7d1f1f"
        android:textIsSelectable="false"
        android:phoneNumber="false"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/button"
        android:textSize="35dp"
        android:background="@android:drawable/btn_default"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:onClick="login" />

</RelativeLayout>
